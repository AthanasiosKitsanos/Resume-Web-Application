@page
@addTagHelper*, Microsoft.AspNetCore.Mvc.TagHelpers
@model ResumeProject.Pages.Account.GetAllUsersModel
@{
    ViewData["Title"] = "My Profile";
}

@section Styles
{
    <link rel="stylesheet" href="~/CSS/navClass.css" asp-append-version="true">
    <link rel="stylesheet" href="~/CSS/tableClass.css" asp-append-version="true">
}

<h2>All Users</h2>

@if(Model.AllUsersList is not null || Model.AllUsersList?.Count > 0)
{
    <div>
        <table>
            <thead>
                <tr>
                    <td><label>First Name</label></td>
                    <td><label>Last Name</label></td>
                    <td><label>Email</label></td>
                    <td><label>Phone Number</label></td>
                    <td><label>Age</label></td>
                    <td><label>Date of Birth</label></td>
                </tr>
            </thead>
            <tbody>
                @foreach(var user in Model.AllUsersList)
                {
                    <tr>
                        <td>@user.FirstName</td>
                        <td>@user.LastName</td>
                        <td>@user.Email</td>
                        <td>@user.PhoneNumber</td>
                        <td>@user.Age</td>
                        <td>@user.DateOfBirth.ToString("dd-MM-yyyy")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <p>User information not found</p>
}