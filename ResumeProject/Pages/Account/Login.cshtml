@page
@addTagHelper*, Microsoft.AspNetCore.Mvc.TagHelpers
@model ResumeProject.Pages.Account.LoginModel

@{
    ViewData["Title"] = "Login";
}

<h2>Login</h2>

<form method="post">
    <div>
        <label>Email</label>
        <input type="email" asp-for="LoginDto.Email" required />
        <span asp-validation-for="LoginDto.Email" class="text-danger"></span>
    </div>

    <div>
        <label>Password</label>
        <input type="password" asp-for="LoginDto.Password" required />
        <span asp-validation-for="LoginDto.Password" class="text-danger"></span>
    </div>

    <div>
        <label>Remember Me</label>
        <input type="checkbox" asp-for="LoginDto.RememberMe" />
    </div>

    <button type="submit">Login</button>
</form>
