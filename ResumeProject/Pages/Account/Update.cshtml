@page
@addTagHelper*, Microsoft.AspNetCore.Mvc.TagHelpers
@model ResumeProject.Pages.Account.UpdateModel

@{
    ViewData["Tilte"] = "Update";
    var successMessage = TempData["SuccessMessage"] as string;
}

@section Styles
{
    <link rel="stylesheet" href="~/CSS/buttonClass.css" asp-append-version="true">
    <link rel="stylesheet" href="~/CSS/formClass.css" asp-append-version="true">
}


<h2>Update Info</h2>

<form method="post" class="center-from">
    <div>
        <label>Email:</label>
        <input type="email" asp-for="Input.Email" />
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>

    <div>
        <label>First Name:</label>
        <input asp-for="Input.FirstName" />
        <span asp-validation-for="Input.FirstName" class="text-danger"></span>
    </div>

    <div>
        <label>Last Name:</label>
        <input asp-for="Input.LastName" />
        <span asp-validation-for="Input.LastName" class="text-danger"></span>
    </div>

    <div>
        <label>Phone Number</label>
        <input asp-for="Input.PhoneNumber" />
        <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
    </div>

    <div class="button-align">
        <ul>
            <li>
                <button type="submit">Update</button>
            </li>

            <li>
                <a asp-page="/Index">Cancel</a>
            </li>
        </ul>
    </div>
</form>

@if(!string.IsNullOrEmpty(successMessage))
{
    <div>
        @successMessage
    </div>
}

<div>
    @if (!ModelState.IsValid)
    {
        <div>
            <ul>
                @foreach (var error in ModelState.Values.SelectMany(v => v.Errors))
                {
                    <li>@error.ErrorMessage</li>
                }
            </ul>
        </div>
    }
</div>