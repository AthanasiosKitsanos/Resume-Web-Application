@page
@addTagHelper*, Microsoft.AspNetCore.Mvc.TagHelpers
@model ResumeProject.Pages.Account.LoginModel

@{
    ViewData["Title"] = "Login";
}

@section Styles
{
    <link rel="stylesheet" href="~/styles.css" asp-append-version="true">
}

<h2>Login</h2>

<form method="post" class="center-form">
    <div>
        <label>Email</label>
        <input type="email" asp-for="LoginDto.Email" required />
        <span asp-validation-for="LoginDto.Email" class="text-danger"></span>
    </div>

    <div>
        <label>Password</label>
        <input type="password" asp-for="LoginDto.Password" required />
        <span asp-validation-for="LoginDto.Password" class="text-danger"></span>
    </div>

    <div>
        <label>Remember Me</label>
        <input type="checkbox" asp-for="LoginDto.RememberMe" />
    </div>

    <div class="button-align">
        <ul>
            <li>
                <button type="submit">Sign In</button>
            </li>

            <li>
                <button type="button" onclick="widnow.location.href='/Index'">Cancel</button>
            </li>
        </ul>
    </div>
</form>
